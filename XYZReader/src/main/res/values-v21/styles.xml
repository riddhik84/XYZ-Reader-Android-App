<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary_brown</item>
        <item name="android:colorPrimaryDark">@color/primary_brown_dark</item>
        <item name="android:colorAccent">@color/primary_accent_pink</item>

        <item name="android:toolbarStyle">@style/AppThemeToolbar</item>

        <!-- transition -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_brown</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@style/AppThemeToolbar">
        <item name="android:textSize">@dimen/article_detail_header_textsize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@style/AppThemeToolbar">
        <item name="android:textSize">@dimen/article_detail_collapsed_header_textsize</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="TextShadow1" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="TextShadow2" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="AppTheme.DetailCardShadow">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">30</item>
    </style>

</resources>